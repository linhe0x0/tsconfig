{
  "compilerOptions": {
    // Only enable it after the issue https://github.com/Microsoft/TypeScript/issues/29172 is be resolved.
    // "rootDir": "./src",
    // "outDir": "./dist",
    "target": "es2018", // Node.js 10
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "stripInternal": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "newLine": "lf"
  }
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "**/*.spec.ts"]
}
